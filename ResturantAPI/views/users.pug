doctype html
html(lang="en")
    head
        
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title users
    body 
        include ./header
        h1 User Directory 
        h3 Current public  users:  
        each user in users 
            - if(!user.privacy)
                br
                a(href=`/users/${user._id}`) #{user.username}